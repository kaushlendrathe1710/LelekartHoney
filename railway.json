{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "NODE_ENV=development npm install --legacy-peer-deps"
          ]
        },
        "build": {
          "cmds": [
            "NODE_ENV=development npm run build",
            "npm run build:chrome"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "NODE_ENV=production npm start"
  }
}
